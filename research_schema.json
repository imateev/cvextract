{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/company-profile.schema.json",
  "title": "CompanyProfile",
  "type": "object",
  "required": ["name", "domains"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Legal or commonly used name of the company."
    },
    "description": {
      "type": "string",
      "description": "High-level description of what the company does."
    },
    "domains": {
      "type": "array",
      "description": "Industries, sectors, or business domains the company operates in.",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true
    },
    "technology_signals": {
      "type": "array",
      "description": "Inferred or observed technology relevance signals for the company.",
      "items": {
        "type": "object",
        "required": ["technology"],
        "properties": {
          "technology": {
            "type": "string",
            "description": "Name of the technology or technical domain."
          },
          "category": {
            "type": "string",
            "description": "High-level grouping (e.g., data, cloud, security, AI)."
          },
          "interest_level": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Estimated relevance or importance."
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence in this signal."
          },
          "signals": {
            "type": "array",
            "description": "Evidence supporting this technology signal.",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "notes": {
            "type": "string",
            "description": "Optional human-readable explanation."
          }
        },
        "additionalProperties": false
      }
    },
    "industry_classification": {
      "type": "object",
      "description": "Standardized industry identifiers.",
      "properties": {
        "naics": { "type": "string" },
        "sic": { "type": "string" }
      },
      "additionalProperties": false
    },
    "founded_year": {
      "type": "integer",
      "minimum": 1600,
      "maximum": 2100
    },
    "headquarters": {
      "type": "object",
      "properties": {
        "city": { "type": "string" },
        "state": { "type": "string" },
        "country": { "type": "string" }
      },
      "required": ["country"],
      "additionalProperties": false
    },
    "company_size": {
      "type": "string",
      "enum": ["solo", "small", "medium", "large", "enterprise"]
    },
    "employee_count": {
      "type": "integer",
      "minimum": 1
    },
    "ownership_type": {
      "type": "string",
      "enum": ["private", "public", "nonprofit", "government"]
    },
    "website": {
      "type": "string",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "acquisition_history": {
      "type": "array",
      "description": "Historic ownership information for the company, including past acquisitions and owners.",
      "items": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Name of the company or entity that owned/acquired this company."
          },
          "year": {
            "type": "integer",
            "minimum": 1600,
            "maximum": 2100,
            "description": "Year when the acquisition occurred."
          },
          "notes": {
            "type": "string",
            "description": "Additional details about the acquisition or ownership."
          }
        },
        "required": ["owner"],
        "additionalProperties": false
      }
    },
    "rebranded_from": {
      "type": "array",
      "description": "Past names for the same company, showing rebranding history.",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "owned_products": {
      "type": "array",
      "description": "Concrete products and services that the company owns, develops, or sells.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the product or service."
          },
          "category": {
            "type": "string",
            "description": "Product category (e.g., software, hardware, SaaS, consulting)."
          },
          "description": {
            "type": "string",
            "description": "Brief description of what the product does."
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    "used_products": {
      "type": "array",
      "description": "Concrete products, tools, and platforms that the company uses in their operations or tech stack.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the product, tool, or platform."
          },
          "category": {
            "type": "string",
            "description": "Product category (e.g., CRM, cloud platform, database, analytics)."
          },
          "purpose": {
            "type": "string",
            "description": "How the company uses this product."
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
