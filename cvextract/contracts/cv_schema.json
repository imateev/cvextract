{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/cv.schema.json",
  "title": "CV",
  "description": "Schema for structured CV/resume data extracted from documents",
  "type": "object",
  "required": ["identity", "sidebar", "overview", "experiences"],
  "properties": {
    "identity": {
      "type": "object",
      "description": "Personal identity information from the CV header",
      "required": ["title", "full_name", "first_name", "last_name"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Professional title or role (e.g., 'Senior Software Engineer')"
        },
        "full_name": {
          "type": "string",
          "description": "Full name of the person"
        },
        "first_name": {
          "type": "string",
          "description": "First name"
        },
        "last_name": {
          "type": "string",
          "description": "Last name"
        }
      },
      "additionalProperties": false
    },
    "sidebar": {
      "type": "object",
      "description": "Categorized lists from the CV sidebar/header section",
      "properties": {
        "languages": {
          "type": "array",
          "description": "Programming languages",
          "items": {
            "type": "string"
          }
        },
        "tools": {
          "type": "array",
          "description": "Tools and technologies",
          "items": {
            "type": "string"
          }
        },
        "certifications": {
          "type": "array",
          "description": "Professional certifications",
          "items": {
            "type": "string"
          }
        },
        "industries": {
          "type": "array",
          "description": "Industry sectors",
          "items": {
            "type": "string"
          }
        },
        "spoken_languages": {
          "type": "array",
          "description": "Spoken/natural languages",
          "items": {
            "type": "string"
          }
        },
        "academic_background": {
          "type": "array",
          "description": "Education and academic qualifications",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "overview": {
      "type": "string",
      "description": "Free-text overview/summary section from the CV body"
    },
    "experiences": {
      "type": "array",
      "description": "List of professional experience entries",
      "items": {
        "type": "object",
        "required": ["heading", "description"],
        "properties": {
          "heading": {
            "type": "string",
            "description": "Experience heading, typically including role and date range (e.g., 'Jan 2020 - Present | Senior Developer')"
          },
          "description": {
            "type": "string",
            "description": "Description of the role and responsibilities"
          },
          "bullets": {
            "type": "array",
            "description": "Bullet points detailing achievements and responsibilities",
            "items": {
              "type": "string"
            }
          },
          "environment": {
            "type": ["array", "null"],
            "description": "Technical environment or tech stack used (can be null)",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
